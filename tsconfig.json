{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["dom", "es6"],
      "jsx": "react-jsx",
      "strict": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "baseUrl": "src",
      "paths": {
        "@pearls": ["src/BlogView/pearls"],
        "hooks": ["src/BlogView/hooks"]
      }
    },
    "include": ["src/**/*", "i18next-parser.config.ts"],
    "exclude": ["node_modules"]
  }